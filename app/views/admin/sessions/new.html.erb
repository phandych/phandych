<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= simple_form_for(:session, url: admin_login_path, html: { class: "form-signin"}) do |f| %>
			<%= f.label :email %>
			<%= f.email_field :email, class: "form-control" %>

			<%= f.label :password %>
			<%= f.password_field :password, class: "form-control" %>


			<%= f.button :submit %>
		<% end %>
	</div>
</div>