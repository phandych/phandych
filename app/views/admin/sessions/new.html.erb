<div class="wrapper-page row">
	<div class="card-box col-md-4 col-md-offset-4">
		<%= simple_form_for(:session, url: admin_login_path, html: { class: "form-signin"}) do |f| %>

			<%= f.input :email, label: false, placeholder: "Email", class: "form-control" %>

			<%= f.input :password, label: false, placeholder: "Password", class: "form-control" %>


			<%= f.button :submit, "Login",class: "btn-primary" %>
		<% end %>
	</div>
</div>