<div class="row">
	<div class="col-md-8"></div>
	<div class="col-md-4">
		<div id="user-form" class="form-margin">
			<div class="text-center">
				<h3>Sign Up</h3>
			</div>
			<%= simple_form_for @user, url: signup_path do |f| %>
				<%= f.input :name %>
				<%= f.input :email %>
				<%= f.input :password %>
				<%= f.input :password_confirmation %>
				<%= f.button :submit, "Sign Up" %>
			<% end %>
		</div>
	</div>
</div>